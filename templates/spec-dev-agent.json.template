{
  "name": "{{AGENT_NAME}}",
  "description": "Research and investigation agent with web search and documentation access",
  "mcpServers": {},
  "tools": [
    "fs_read",
    "fs_write", 
    "execute_bash"
  ],
  "allowedTools": [
    "fs_read"
  ],
  "toolsSettings": {
    "execute_bash": {
      "allowedCommands": [
        "find", "grep", "ls", "cat", "head", "tail", "tree", "wc", "sort", "uniq",
        "curl", "wget",
        "python", "python3", "pip",
        "mkdir", "cp", "mv", "echo", "pwd", "which", "date"
      ]
    }
  },
  "resources": [
    "file://{{REPO_PATH}}/contexts/spec_rules_en.md",
    "file://{{REPO_PATH}}/contexts/steering_seeds_guide.md",
    "file://{{REPO_PATH}}/contexts/spec_templates/requirements.md",
    "file://{{REPO_PATH}}/contexts/spec_templates/notes.md",
    "file://{{REPO_PATH}}/contexts/tips.md",
    "file://{{REPO_PATH}}/contexts/user_preference_{{AGENT_NAME}}.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "if [ -d .kiro/steering ]; then echo '=== Project Steering ==='; for file in .kiro/steering/*.md; do if [ -f \"$file\" ]; then echo \"--- $(basename \"$file\") ---\"; cat \"$file\"; echo; fi; done; fi",
        "timeout_ms": 10000,
        "cache_ttl_seconds": 300,
        "max_output_size": 16384
      },
      {
        "command": "if [ ! -d .kiro/steering ]; then echo '=== Project Startup Guide ==='; cat {{REPO_PATH}}/contexts/project_startup_en.md; fi",
        "timeout_ms": 5000,
        "cache_ttl_seconds": 300,
        "max_output_size": 4096
      },
      {
        "command": "if [ ! -d .kiro/steering ]; then echo '=== Steering Templates ==='; for file in {{REPO_PATH}}/contexts/steering_templates/*.md; do echo \"--- $(basename \"$file\") ---\"; cat \"$file\"; echo; done; fi",
        "timeout_ms": 3000,
        "cache_ttl_seconds": 300,
        "max_output_size": 2048
      },
      {
        "command": "echo '=== Available Steering Seeds ==='; ls {{REPO_PATH}}/steering_seeds/design_philosophy/ {{REPO_PATH}}/steering_seeds/tech_stacks/",
        "timeout_ms": 1000,
        "cache_ttl_seconds": 300,
        "max_output_size": 1024
      }
    ]
  }
}
