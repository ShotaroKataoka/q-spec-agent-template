{
  "name": "dev-agent",
  "description": "AIDLC-optimized development agent with SPEC-driven workflow",
  "mcpServers": {},
  "tools": [
    "fs_read",
    "fs_write", 
    "execute_bash"
  ],
  "allowedTools": [
    "fs_read",
    "execute_bash"
  ],
  "toolsSettings": {
    "execute_bash": {
      "allowedCommands": [
        "git status", "git log", "git diff", "git show", "git branch", "git checkout",
        "git add", "git commit", "git pull", "git fetch", "git stash",
        "git tag", "git remote", "git config", "git blame", "git ls-files",
        "find", "grep", "ls", "cat", "head", "tail", "tree", "wc", "sort", "uniq",
        "python", "python3", "pip", "pytest", "coverage", "black", "flake8", "mypy",
        "mkdir", "cp", "mv", "rm", "chmod", "echo", "pwd", "which", "date"
      ]
    }
  },
  "resources": [
    "file://{{REPO_PATH}}/contexts/aidlc_en.md",
    "file://{{REPO_PATH}}/contexts/git_rules.md",
    "file://{{REPO_PATH}}/contexts/spec_rules_en.md",
    "file://{{REPO_PATH}}/contexts/Q-SPEC Framework.md",
    "file://{{REPO_PATH}}/contexts/user_preference.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git status --porcelain -b",
        "timeout_ms": 5000,
        "cache_ttl_seconds": 0,
        "max_output_size": 2048
      },
      {
        "command": "if [ -d .kiro/steering ]; then echo '=== Project Steering ==='; for file in .kiro/steering/*.md; do if [ -f \"$file\" ]; then echo \"--- $(basename \"$file\") ---\"; cat \"$file\"; echo; fi; done; fi",
        "timeout_ms": 10000,
        "cache_ttl_seconds": 300,
        "max_output_size": 16384
      },
      {
        "command": "if [ ! -d .kiro/steering ]; then echo '=== Project Startup Guide ==='; cat {{REPO_PATH}}/contexts/project_startup_en.md; fi",
        "timeout_ms": 5000,
        "cache_ttl_seconds": 300,
        "max_output_size": 4096
      }
    ]
  }
}
